<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/archivo"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MANEJO DE FICHEROS"
        android:gravity="center_horizontal"
        android:textSize="24dp"
        android:layout_marginTop="50dp"
        android:textColor="#EE0707"></TextView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F3F4FA"
        android:text="EJEMPO 1"
        android:id="@+id/btn1"
        android:background="#4B1302"
        android:layout_marginVertical="20dp"></Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EJEMPO 1"
        android:textColor="#F4F5FC"
        android:id="@+id/btn2"
        android:background="#080C25"
        android:layout_marginVertical="20dp"></Button>

</LinearLayout>